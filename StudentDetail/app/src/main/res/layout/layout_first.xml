<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <TextView
        android:id="@+id/idTitleText1st"
        android:layout_width="259dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Student Details"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/idName"
        android:layout_width="286dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="75dp" />

    <EditText
        android:id="@+id/idCM"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/idName"
        android:layout_marginTop="209dp"
        android:ems="10"
        android:hint="C"
        android:inputType="number"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="158dp" />

    <EditText
        android:id="@+id/idCppM"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idCM"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="C++"
        android:inputType="number"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="158dp" />

    <EditText
        android:id="@+id/idJavaM"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_alignEnd="@+id/idTitleText1st"
        android:layout_alignTop="@+id/idCM"
        android:ems="10"
        android:inputType="number"
        android:textSize="24sp"
        tools:hint="Java"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="158dp" />

    <Button
        android:id="@+id/idSubmit"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:text="Submit"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="231dp" />

    <EditText
        android:id="@+id/idTotal1"
        android:layout_width="263dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:ems="10"
        android:hint="Total:"
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="325dp" />

    <EditText
        android:id="@+id/idFeedback1"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Feedback"
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="412dp" />

</RelativeLayout>